<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <httpErrors errorMode="Detailed" />
        <security>
            <authorization>
                <remove users="*" roles="" verbs="" />
                <add accessType="Allow" users="*" />
            </authorization>
        </security>
        
        <!-- WebSocket支援 -->
        <webSocket enabled="true" />
        
        <!-- URL重寫規則 -->
        <rewrite>
            <rules>
                <!-- 規則 1: 強制將所有 HTTP 請求重新導向到 HTTPS -->
                <rule name="Force HTTPS" enabled="true" stopProcessing="true">
                    <match url="(.*)" ignoreCase="false" />
                    <conditions>
                        <add input="{HTTPS}" pattern="^off$" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
                </rule>
                
                <!-- 規則 2: 代理 WebSocket (WSS) 請求 -->
                <rule name="WSS Proxy" stopProcessing="true">
                    <match url="wss/(.*)" />
                    <conditions>
                        <add input="{HTTP_UPGRADE}" pattern="websocket" ignoreCase="true" />
                    </conditions>
                    <!-- 關鍵修改：將 http 改為 https -->
                    <action type="Rewrite" url="https://127.0.0.1:3000/{R:1}" />
                </rule>
                
                <!-- 規則 3: 代理所有其他的 HTTPS 內容 -->
                <rule name="ReverseProxyInboundRule" stopProcessing="true">
                    <match url="(.*)" />
                    <!-- 關鍵修改：將 http 改為 https -->
                    <action type="Rewrite" url="https://127.0.0.1:3000/{R:1}" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- HTTP協議設定 -->
        <httpProtocol>
            <customHeaders>
                <add name="Access-Control-Allow-Origin" value="*" />
                <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
                <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, Upgrade, Connection" />
            </customHeaders>
        </httpProtocol>
        
        <!-- 預設文件 -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.html" />
            </files>
        </defaultDocument>
        
        <!-- 啟用ARR代理功能 -->
        <proxy enabled="true" />
    </system.webServer>
    
    <!-- ASP.NET設定 -->
    <system.web>
        <httpRuntime executionTimeout="300" maxRequestLength="51200" />
        <compilation debug="false" />
    </system.web>
</configuration>
